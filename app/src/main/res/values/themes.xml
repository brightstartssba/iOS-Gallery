<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IOSGallery" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material 3 color attributes -->
        <item name="colorPrimary">@color/ios_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/ios_gray</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        
        <item name="colorSecondary">@color/ios_dark_gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/ios_gray</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        
        <item name="colorTertiary">@color/teal_200</item>
        <item name="colorOnTertiary">@color/black</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/ios_gray</item>
        <item name="colorOnSurfaceVariant">@color/ios_dark_gray</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/white</item>
        
        <!-- Status bar color using Material 3 approach -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ios_blue</item>
    </style>
</resources>